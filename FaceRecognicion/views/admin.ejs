<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>YAgeTunes - Admin</title>
      <!-- CSS only -->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
      <link
        rel="stylesheet"
        href="https://bootswatch.com/4/journal/bootstrap.min.css"
      />
      <link rel = "icon" href = "/assets/img/logoblack.png" style="width: 15px" type = "image/x-icon">
      <style>
         body {
         background-color: white !important;
         }
         button{
         margin-top: 5px;
         width: 5%;
         background-color: #ffffff;
         color: #080710;
         padding: 15px 0;
         font-size: 18px;
         font-weight: 600;
         border-radius: 5px;
         cursor: pointer;
         }
         table {
         margin-left: 11% !important;
         width: 80% !important;  
         border: 1px solid black !important;
         }
         thead {
         background-color: #19191a;
         color: #ffffff;
         }
         header {
         background-color: rgb(255, 255, 255);
         padding: 0;
         transition: all 0.4s ease 0s;
         height: 110px;
         /* text-align: center; */
         display: flex;
         justify-content: space-between;
         color: #000000;
         margin: 0;
         }
         *, ::after, ::before {
         box-sizing: border-box;
         }
      </style>
   </head>
   <body>
    <header id="site-header">
        <div class="container">
           <nav class="navbar navbar-expand-lg navbar-light stroke">
              <a class="navbar-brand" href="/">
               <img id="icon-branco" src="/assets/img/logoblack.png" alt="logo" style="width: 8%;">
              <img id="icon-branco" src="/assets/img/yAgeTunes.png" alt="logo" style="width: 26%;">
              </a>
              <div class="collapse navbar-collapse" id="navbarScroll">
                 <ul class="navbar-nav mx-lg-auto my-2 my-lg-0 navbar-nav-scroll fix">
                    <li class="nav-item">
                       <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                       <a class="nav-link" href="/">Novidades</a>
                    </li>
                    <li class="nav-item">
                       <a class="nav-link" href="/">Contactos</a>
                    </li>
                 </ul>
              </div>
           </nav>
        </div>
     </header>
      <h1>
         View All Users
      </h1>
      <table class="table">
         <thead>
            <tr>
               <th>ID</th>
               <th>Name</th>
               <th>Email</th>
               <th>Password</th>
               <th>Role</th>
               <th>Date</th>
               <th>Action</th>
               <!-- Add a new column for the delete button -->
            </tr>
         </thead>
         <tbody>
            <% users.forEach(function (user) { %>
            <tr>
               <td><%= user.id %></td>
               <td><%= user.name %></td>
               <td><%= user.email %></td>
               <td><%= user.password %></td>
               <td><%= user.role %></td>
               <td><%= user.date %></td>
               <td>
                  <a href="/add" class="btn btn-primary" style="height: 40px; width: 46px;"><i class="fas fa-plus"></i></a>&nbsp;&nbsp;<br>
                  <a href="/edit/<%= user.id %>" class="btn btn-primary" style="width: 47px;"><i class="far fa-edit"></i></a>&nbsp;&nbsp;<br>
                  <a href="/delete/<%= user.id %>" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
               </td>
            </tr>
            <% }) %>
         </tbody>
      </table>
      <button class="button-17" role="button" style="margin-left: 50%;"> <a href="/users/logoutAdmin">Logout</a></button>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
      
   </body>
</html>