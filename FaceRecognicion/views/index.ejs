<!doctype html>
<html lang="en" class="h-100">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MoodBeats</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel = "icon" href = "/assets/img/logo.png" style="width: 15px" type = "image/x-icon">
    <style>
      body, html {
        margin: 0;
        padding: 0;
      }

      .hero-section {
  background-image: url('assets/img/background8.gif');
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  padding-top: 80px; /* altura do header */
}

      .about-section {
        background-color: white;
        color: black;
        padding: 60px 20px;
      }

      .footer-dark {
        background-color: #000;
        color: white;
        text-align: center;
        padding: 20px 10px;
      }

      header form button {
        margin-left: 10px;
      }

      a {
        text-decoration: none;
      }

      .btn-link {
        border: none;
        background: none;
        padding: 0;
      }

      @media (max-width: 576px) {
        header {
          flex-direction: column;
        }
      }
    </style>
  </head>
  <body>

    <!-- Hero Section -->
    <section class="hero-section position-relative">
  <!-- Header fixo no topo -->
<header class="fixed-top w-100 py-3 px-4 d-flex justify-content-between align-items-center bg-transparent" style="z-index: 100;">
  <h3 class="fw-bold text-white m-0">MoodBeats</h3>
  <div class="d-flex gap-2">
    <form action="users/login">
      <button class="btn btn-outline-light fw-bold px-4" type="submit">Login</button>
    </form>
    <form action="users/register">
      <button class="btn btn-light fw-bold px-4" type="submit">Register</button>
    </form>
  </div>
</header>
  <!-- Conteúdo central -->
  <div class="container d-flex flex-column justify-content-center align-items-center text-center" style="min-height: 100vh;">
    <main class="my-5">
      <h1 class="display-4 text-white">Hello there</h1>
      <p class="lead text-white">Welcome to MoodBeats App</p>
    </main>

    <footer class="text-white-50 mt-5">
      <p>MoodBeats © Copyright, by 
        <a href="https://www.linkedin.com/in/martim-marques-0864551b5/" class="text-white" target="_blank">Martim Marques</a>.
      </p>
    </footer>
  </div>
</section>
    <!-- About Section -->
    <section class="about-section text-center">
      <div class="container">
        <h2 class="mb-4">Sobre Nós</h2>
        <p class="mb-5">
